{{>header}}


    <!-- ---------------Start---header----------- -->


      <header class="mb-auto">
        {{#each firstArticle}}
        <div class="header mt-5 p-4 p-md-5 mb-4 text-white rounded bg-danger">
          <div class="col-lg-6 px-0">
            <h1 class="text-start display-4 fst-italic">
              {{this.title}}
            </h1>
            <p class="lead my-3 text-start">
              {{this.description}}
            </p>
            <p class="lead mb-0 text-start">
              <a target="_blank" href="{{this.url}}" class="text-white fw-bold">Continue reading...</a>
            </p>
          </div>
        </div>
      </header>
      {{/each}}
    </div>

    <!-- ---------------End---header----------- -->

    <!-- ---------------Start---cards----------- -->

    <div class="container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <div class="album py-3"></div>
      <div class="container p-0">
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3">

          {{#each articles}}
          
          <div class="col">
            <div class="card shadow-sm h-100">
              <img
                src="{{this.urlToImage}}"
                class="cardimg card-img-top p-1"
                alt="..."
              />

              <div class="card-body text-start">
                <p class="pcard card-text">
                  {{this.title}}
                </p>
                <p class="pcardx">
                  {{this.description}}
                </p>
                </div>
                <div class="d-flex justify-content-between align-items-center p-3">
                  <div class="">
                    <a target="_blank" href="{{this.url}}"><button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Read More
                    </button></a>
                  </div>
                  <div>
                    
                    <small class="text-muted">{{this.articleDate}}</small>
                    
                    <small class="text-muted">{{this.articleTime}} UTC </small>
                  </div>
                </div>
              
            </div>
          </div>

          {{/each}}
        </div>
      </div>
    </div>
    <!-- -----------------End---cards----------- -->

    <!-- -----------------Start---footer----------- -->


{{>footer}}